                      }
                  ]
               }
              
        404:
          body: 
            application/json:
              type: Error
              example: {"code" : "404", "message" : "Resource not found"}
              
    put:
      description:  Update a customer
      body: 
        application/json:
          type: Customer
          example: 
            {
              "saluation" : "Mr",
              "firstName": "Rajesh",
              "lastName": "Kumar",
              "email": "rajesh.kumar@example.com",
              "phone": "(02)98770272",
              "mobile": "0409763597",
              "status": "active",
            }
      responses: 
        200:
          body: 
            application/json:
              type: Customer
              example:  
                {
                  "customerId" : "0011",
                  "saluation" : "Mr",
                  "firstName": "Rajesh",
                  "lastName": "Kumar",
                  "email": "rajesh.kumar@example.com",
                  "phone": "(02)98770272",
                  "mobile": "0409763597",
                  "status": "active",
                   "links": [
                      {
                        "href": "customers/0011/addresses",
                        "rel": "addresses",
                      }
                    ]
                 }
        400:
          body: 
            application/json:
              type: Error
              example: {"code" : "400", "message" : "Bad request paramters."}
        404:
          body: 
            application/json:
              type: Error
              example: {"code" : "404", "message" : "Resource not found."}
    
    delete:
      description: Delete a customer
      responses: 
        200:
             
   
