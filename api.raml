        application/json:
          type: Address
          example:
             {
                "addressType": "ShippingAddress",
                "line1": "53 Grayson Road",
                 "line2": "",
                "city": "North Epping",
                "state": "NSW",
                "postcode": "2121",
                "country": "Australia"
              }
      responses: 
        200:
          body: 
            application/json:
              type: Address
              example:
               {
                 "addressType": "ShippingAddress",
